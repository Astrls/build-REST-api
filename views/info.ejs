<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>Available API endpoints</h1>
    <table>
      <th>API endpoints</th>
      <th>Recipe Name</th>
      <th>Available request</th>
      <tr>
        <td>/</td>
        <td>All recipes</td>
        <td>GET</td>
      </tr>
      <% for(let i=0; i < data.length; i++) { %>
      <tr>
        <td><%= `/recipe${i+1}` %></td>
        <td><%= data[i].name %></td>
        <td>GET</td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
